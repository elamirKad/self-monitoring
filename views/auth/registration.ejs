<%- include('../partials/header.ejs', {hideNavbar: true}) %>
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-4">
      <form action="/auth/registration" method="POST" novalidate>
        <img class="mb-4" src="/static/logo.png" alt="Logo" height="48" />
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        <div class="form-group">
					<label for="email" class="sr-only">Email</label>
					<input type="text" id="username" name="email" class="form-control <% if (typeof errors.email !== "undefined") { %> is-invalid <% } %>" placeholder="Email" value="<%=email%>" required autofocus />
					<% if (typeof errors.email !== "undefined") { %>
						<div class="invalid-message">
							<%= Object.values(errors.email)[0] %> 
						</div>
					<% } %>
					<label for="password" class="sr-only">Password</label>
					<input type="password" id="password" name="password" class="form-control <% if (typeof errors.password !== "undefined") { %> is-invalid <% } %>" placeholder="Password" required />
					<% if (typeof errors.password !== "undefined") { %>
						<div class="invalid-message">
							<%= Object.values(errors.password)[0] %> 
						</div>
					<% } %>
					<label for="verification" class="sr-only">Repeat Password</label>
					<input type="password" id="password" name="verification" class="form-control <% if (typeof errors.verification !== "undefined") { %> is-invalid <% } %>" placeholder="Repeat Password" required />
					<% if (typeof errors.verification !== "undefined") { %>
						<div class="invalid-message">
							<%= Object.values(errors.verification)[0] %> 
						</div>
					<% } %>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">
            Register
        </button>
        </div>
        <p>or <a href="/auth/login">log in</a> with an existing account</p>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') %>