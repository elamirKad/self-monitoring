<%- include('../partials/header.ejs', {hideNavbar: true}) %>
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-4">
      <form action="/auth/login" method="POST" novalidate>
        <img class="mb-4" src="/static/logo.png" alt="Logo" height="48" />
        <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
        <div class="mb-3">
          <label for="username" class="visually-hidden">Email</label>
          <input type="text" id="username" name="email" class="form-control" placeholder="Email" required autofocus />
          <label for="password" class="visually-hidden">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />
        </div>
        <div class="mb-3 d-grid gap-2">
          <button class="btn btn-lg btn-primary" type="submit">
            Sign in
					</button>
					<% if (typeof success !== "undefined" && success === false) { %>
						<div class="invalid-message">
							Invalid email or password
						</div>
					<% } %>
				</div>
        <p>or <a href="/auth/registration">create a new account</a></p>
      </form>
    </div>
  </div>
<%- include('../partials/footer.ejs') %>